---
cluster: "<%= ENV["CSC_CLUSTER"] -%>"

<% max_mem_per_cpu = SlurmLimits.limits.fetch(csc_slurm_partition, {}).fetch(:max_mem_per_cpu, 0).to_f %>
<% mem = (max_mem_per_cpu * 1024 * csc_cores.to_i).to_i %>

batch_connect:
  template: "basic"
script:
  native:
      - '-c'
      - '<%= csc_cores  %>'
      - '-t'
      - '<%= csc_time %>'
      <% if max_mem_per_cpu > 0 %>
      - '--mem=<%= mem -%>M'
      <% else %>
      - '--mem=<%= csc_memory -%>G'
      <% end %>
      <% if csc_nvme.to_i > 0 %>
      - '--gres=nvme:<%= csc_nvme -%>'
      <% end %>
